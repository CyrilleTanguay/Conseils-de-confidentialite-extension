{
  "manifest_version": 2,
  "name": "CoSeCo — Conseils de Sécurité et de Confidentialité",
  "author": "Cyrille Tanguay",
  "description": "Vous donne des conseils pour protéger vos données et pour réagir en cas de chantage",
  "version": "1.0",
  "icons": {
    "64": "icons/icone64.svg"
  },
    
  "permissions": [
    "activeTab",
    "browserSettings",
    "contextMenus",
    "management",
    "menus",
    "notifications",
    "privacy",
    "scripting",
    "storage",
    "unlimitedStorage",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches":[
        "https://www.facebook.com/settings*"
      ],
      "js":[
        "content_script.js", "liensBouton.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icone64Blanc.svg"
    },
    "default_popup": "browserAction/MenuPr/index.html",
    "default_title": "CoSeCo"
  },
  "page_action":{
    "default_icon": "icons/icone64Blanc.svg",
    "default_popup":"pageAction/index.html",
    "show_matches":["https://www.facebook.com/", "https://twitter.com/*", "https://*.instagram.com/*", "https://www.youtube.com/*", "https://*.google.com/*"]
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "content_security_policy": "script-src 'self' https://fonts.googleapis.com/* https://fonts.gstatic.com/*; object-src 'self';"



  
}